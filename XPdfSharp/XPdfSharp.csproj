<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>	
		<TargetFrameworks>netcoreapp3.1;netstandard2.1</TargetFrameworks>		
		<NuspecFile>XPdfSharp.nuspec</NuspecFile>		
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
		<NoWarn>1591</NoWarn>				
    </PropertyGroup>
	
	<ItemGroup>
		<Folder Include="lib\windows" />
	</ItemGroup>
	
	<ItemGroup>		
		<XPDFTools Include="lib\**\*.*" />		
		<Compile Remove="lib\linux\**" />		
		<Compile Remove="lib\mac\**" />		
		<EmbeddedResource Remove="lib\linux\**" />		
		<EmbeddedResource Remove="lib\mac\**" />		
		<None Remove="lib\linux\**" />		
		<None Remove="lib\mac\**" />		
		<XPDFTools Remove="lib\linux\**" />		
		<XPDFTools Remove="lib\mac\**" />
		<none Include="@(XPDFTools)">
		  <Link>%(FileName)%(Extension)</Link>
		  <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</none>			
	</ItemGroup>
</Project>
